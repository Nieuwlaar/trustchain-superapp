<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/poa_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/rl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_companyImage"
            android:layout_width="100px"
            android:layout_height="100px"
            app:cardCornerRadius="30px"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_bug_report_black_24dp" />

        <LinearLayout
            android:id="@+id/ll_poa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:padding="10dp"
            android:layout_toEndOf="@+id/iv_companyImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_poa_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Witbaard B.V."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_poa_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Power of Attorney"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
