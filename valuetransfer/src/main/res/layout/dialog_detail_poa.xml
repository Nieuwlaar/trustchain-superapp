<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/dialog_rounded_top"
    android:backgroundTint="?attr/dialogColor">

    <include
        android:id="@+id/dialogHandle"
        layout="@layout/handle_dialog" />

    <RelativeLayout
        android:id="@+id/rlDeletePoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_red"
        android:padding="6dp"
        android:layout_marginTop="20dp"
        android:radius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogHandle"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ivDeletePoa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/light_gray"
            android:background="@drawable/ic_delete" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlVisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_small_light_gray"
        android:padding="6dp"
        android:layout_marginTop="16dp"
        android:radius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlDeletePoa"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ivShowDetails"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/dark_gray"
            android:background="@drawable/ic_eye_show"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/ivHideDetails"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/dark_gray"
            android:background="@drawable/ic_eye_hidden"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvCompanyName"
        style="@style/DialogTitle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dialogHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Company Name"/>



    <LinearLayout
        android:id="@+id/llKvkNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCompanyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tvKvkNumberText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="?attr/onDialogColor"
            android:paddingHorizontal="12dp"
            android:text="Number:"
            tools:text="Number:" />

        <TextView
            android:id="@+id/tvKvkNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingHorizontal="12dp"
            android:textAlignment="gravity"
            android:textColor="?attr/onDialogSecondaryColor"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvKvkNumberText"
            app:layout_constraintTop_toBottomOf="@+id/tvCompanyName"
            tools:text="KVK number" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPoaType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llKvkNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tvPoaTypeName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="?attr/onDialogColor"
            android:paddingHorizontal="12dp"
            android:text="Type:"
            tools:text="Type:" />
        <TextView
            android:id="@+id/tvPoaType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="?attr/onDialogSecondaryColor"
            android:paddingHorizontal="12dp"
            app:layout_constraintStart_toEndOf="@+id/tvPoaTypeName"
            app:layout_constraintTop_toBottomOf="@+id/llKvkNumber"
            tools:text="PoA Type" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPoaRelatedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llPoaType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tvPoaRelatedName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="?attr/onDialogColor"
            android:paddingHorizontal="12dp"
            android:text="Issuer:"
            tools:text="Issuer:" />
        <TextView
            android:id="@+id/tvPoaRelated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="gravity"
            android:gravity="left"
            android:textSize="16dp"
            android:textColor="?attr/onDialogSecondaryColor"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/llPoaType"
            tools:text="PoA Related Name" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clQRCode"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/pill_rounded"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:padding="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llPoaRelatedName">

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/pbLoadingSpinner"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:layout_gravity="center"
            android:indeterminateTint="?attr/mutedDarkColor"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintBottom_toBottomOf="@+id/ivQRCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivQRCode" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
